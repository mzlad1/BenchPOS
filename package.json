{
  "name": "mzlad",
  "version": "1.0.2",
  "description": "Offline-ready shop billing and inventory management system",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dev:inspect": "electron . --inspect",
    "build": "NODE_ENV=production electron-builder",
    "build:win": "set NODE_ENV=production && electron-builder",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "cross-env NODE_ENV=production electron-builder --publish always"
  },
  "keywords": [
    "billing",
    "inventory",
    "pos",
    "offline",
    "electron",
    "firebase"
  ],
  "author": "mzlad",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.8",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.4",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "firebase": "^10.14.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "com.mzlad.POS",
    "productName": "BenchPOS",
    "extraResources": [
      ".env"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      ".env",
      "!**/node_modules/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "mzlad1",
      "repo": "BenchPOS",
      "private": false
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
